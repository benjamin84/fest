<?xml version="1.0" encoding="UTF-8"?>
<assembly>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>

  <dependencySets>
    <dependencySet>
      <!-- do not include this project's jar as a dependency -->
      <useProjectArtifact>false</useProjectArtifact>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
    <!-- Copy source of dependencies -->
    <dependencySet>
      <useProjectArtifact>false</useProjectArtifact>
      <outputFileNameMapping>${artifact.artifactId}-${artifact.version}${dashClassifier?}-source.${artifact.extension}</outputFileNameMapping>
      <outputDirectory>lib</outputDirectory>
      <scope>runtime</scope>
    </dependencySet>
  </dependencySets>

  <fileSets>
    <fileSet>
      <includes>
        <include>pom.xml</include>
      </includes>
    </fileSet>
    <fileSet>
      <!-- include this project's jar and sources archive -->
      <directory>target</directory>
      <outputDirectory></outputDirectory>
      <includes>
        <include>*.jar</include>
      </includes>
    </fileSet>
  </fileSets>
</assembly>
