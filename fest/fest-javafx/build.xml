<?xml version="1.0"?>
<project name="fest-javafx" default="compile" basedir="." >
  <property name="lib.dir" value="${basedir}/javafx2/lib" />
  <property name="javafx.src.dir" value="${basedir}/src/test/javafx" />
  <property name="javafx.bin.dir" value="${basedir}/javafx-bin"/>
  <property name="javafxc.home" value="${basedir}/javafx2" />
  
  <path id="javafxc.classpath">
     <fileset dir="${javafxc.home}" includes="**/*.jar,**/*.zip" />
  </path>
  <path id="lib.classpath">
	 <fileset dir="${lib.dir}" includes="**/*.jar,**/*.zip" />
  </path>
  <target name="compile">
    <path id="lib.classpath">
      <fileset dir="${lib.dir}" includes="**/*.jar,**/*.zip" />
    </path>
    <taskdef classname="com.sun.tools.javafx.ant.JavaFxAntTask" classpathref="javafxc.classpath" name="javafxc"/>
    <copy todir="${javafx.bin.dir}">
      <fileset dir="${javafx.src.dir}" includes="**/*.fx" />
    </copy>
  	<javafxc srcdir="${javafx.src.dir}" destdir="${javafx.bin.dir}" includes="**/*.fx"
      		compilerclasspath="${javafxc.classpath};${lib.classpath}"  />
  	
  </target>
</project>
